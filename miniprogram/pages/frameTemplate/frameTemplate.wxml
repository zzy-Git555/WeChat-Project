<template name="content" data="{{...result}}">
  <view class="page" wx:for="{{result}}" wx:key="index" bindtap="detail" data-result="{{result[index]}}">
    <view class="page__bd">
      <view class="weui-panel weui-panel_access">
        <view class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
            <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
              <image lazy-load class="weui-media-box__thumb" src="{{item.img[0]}}" />
            </view>
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
              <view class="weui-media-box__title">{{item.title}}</view>
              <view class="weui-media-box__desc">{{item.contents}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>

</template>